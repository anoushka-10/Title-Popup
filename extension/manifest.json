{
  "manifest_version": 3,
  "name": "LinkedIn Profile Scraper & Feed Interaction",
  "version": "2.0.0",
  "description": "Advanced LinkedIn extension for profile scraping and automated feed interactions",
  
  "permissions": [
    "activeTab",
    "tabs",
    "storage",
    "downloads"
  ],
  
  "host_permissions": [
    "*://linkedin.com/*",
    "*://*.linkedin.com/*"
  ],
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "LinkedIn Extension",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon64.png"
    }
  },
  
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon64.png"
  },
  
  "content_scripts": [
    {
      "matches": [
        "*://linkedin.com/*",
        "*://*.linkedin.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "web_accessible_resources": [
    {
      "resources": ["icons/*"],
      "matches": ["*://linkedin.com/*", "*://*.linkedin.com/*"]
    }
  ],
  
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self';"
  }
}